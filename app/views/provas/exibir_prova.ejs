<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visualizar Prova - <%= prova ? prova.titulo : 'Prova' %></title>
  <link rel="shortcut icon" href="/static/images/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="/static/css/visualizar_prova.css">
</head>
<body>
  <div class="container">
    <% if (error) { %>
  <div class="error"><%= error %></div>
<% } %>

<% if (prova) { %>
  <section class="prova-info">
    <h1><%= prova.titulo %></h1>
    <p><strong>Disciplina:</strong> <%= prova.disciplina || 'Não informada' %></p>
    <p><strong>Ano:</strong> <%= prova.ano || '—' %></p>
    <p><strong>Quantidade de Questões:</strong> <%= prova.quantidade_questoes || questoesDetalhes.length %></p>
  </section>

  <% if (questoesDetalhes && questoesDetalhes.length > 0) { %>
    <% questoesDetalhes.forEach(function(questao, index) { %>
      <article class="questao">
        <header class="questao-header">
          <h2>Questão <%= index + 1 %>: <%= questao.title || '' %></h2>
        </header>

        <div class="enunciado">
          <%- questao.enunciado %>
        </div>

        <% if (questao.imageHTML) { %>
          <div class="imagem-questao">
            <%- questao.imageHTML %>
          </div>
        <% } %>

        <div class="alternativas">
          <% questao.alternativas.forEach(function(alt) { 
            const classe = alt.letra === questao.alternativaCorreta ? 'alternativa correta' : 'alternativa';
          %>
            <div class="<%= classe %>">
              <strong><%= alt.letra %></strong>:
              <span><%- alt.texto %></span>
              <% if (alt.imageHTML) { %>
                <div class="imagem-alternativa"><%- alt.imageHTML %></div>
              <% } %>
            </div>
          <% }) %>
        </div>
      </article>
    <% }) %>
  <% } else { %>
    <p class="sem-questoes">Nenhuma questão encontrada nesta prova.</p>
  <% } %>
<% } else { %>
  <p class="sem-prova">Prova não encontrada.</p>
<% } %>
  <a href="/prova/gerar/form" class="voltar">← Voltar para a lista de provas</a>
</body>
</html>
