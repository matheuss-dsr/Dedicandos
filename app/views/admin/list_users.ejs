<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Usuários - Admin</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 0;
    }
    main {
      max-width: 1000px;
      margin: 2rem auto;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
      padding: 2rem;
    }
    header {
      text-align: center;
      margin-bottom: 2rem;
    }
    header h1 {
      font-weight: 700;
      color: #2563eb;
      margin: 0;
      font-size: 2rem;
    }
    form.search-form {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
    }
    form.search-form input,
    form.search-form select {
      padding: 0.5rem 0.8rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
      outline: none;
    }
    form.search-form button,
    form.search-form .clear-link {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 6px;
      background-color: #2563eb;
      color: #fff;
      cursor: pointer;
      font-weight: 600;
      transition: background 0.2s;
      text-decoration: none;
      font-size: 1rem;
      margin-left: 0.2rem;
    }
    form.search-form button:hover,
    form.search-form .clear-link:hover {
      background-color: #1d4ed8;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1rem;
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    }
    thead {
      background: #f4f6f8;
    }
    th, td {
      padding: 0.85rem 1rem;
      text-align: left;
      border-bottom: 1px solid #eee;
    }
    th {
      font-weight: 600;
      color: #444;
    }
    tr:hover {
      background: #f9fafb;
    }
    td.ativo {
      color: #16a34a;
      font-weight: 600;
    }
    td.inativo {
      color: #dc2626;
      font-weight: 600;
    }
    .actions {
      display: flex;
      gap: 0.5rem;
    }
    .btn {
      padding: 0.35rem 0.7rem;
      border: none;
      border-radius: 5px;
      font-size: 0.95rem;
      cursor: pointer;
      color: #fff;
      font-weight: 500;
      text-decoration: none;
      transition: background 0.2s;
      display: inline-block;
    }
    .btn.edit { background: #2563eb; }
    .btn.edit:hover { background: #1d4ed8; }
    .btn.delete { background: #dc2626; }
    .btn.delete:hover { background: #b91c1c; }
    .btn.reativar { background: #16a34a; }
    .btn.reativar:hover { background: #15803d; }
    .inline-form { display: inline; }
    @media (max-width: 700px) {
      main { padding: 1rem; }
      th, td { padding: 0.5rem; }
      form.search-form { flex-direction: column; align-items: stretch; }
    }
  </style>
</head>
<body>
  <main>
    <header>
      <h1>Usuários</h1>
    </header>
    <section aria-label="Busca de usuários">
      <form method="GET" action="/users" class="search-form" role="search">
        <label for="search" class="visually-hidden">Buscar por username</label>
        <input type="text" id="search" name="search" placeholder="Buscar por username" value="<%= typeof search !== 'undefined' ? search : '' %>">
        <label for="status" class="visually-hidden">Status</label>
        <select id="status" name="status">
          <option value="ativos" <%= status === 'ativos' ? 'selected' : '' %>>Ativos</option>
          <option value="inativos" <%= status === 'inativos' ? 'selected' : '' %>>Inativos</option>
        </select>
        <button type="submit">Buscar</button>
        <a href="/users" class="clear-link" role="button">Limpar</a>
      </form>
    </section>
    <section aria-label="Lista de usuários">
      <table>
        <caption class="visually-hidden">Lista de usuários</caption>
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.id_usuario %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td class="<%= user.ativo ? 'ativo' : 'inativo' %>"><%= user.ativo ? 'Ativo' : 'Inativo' %></td>
              <td>
                <nav class="actions" aria-label="Ações do usuário">
                  <% if (user.ativo) { %>
                    <a href="/users/<%= user.id_usuario %>/editar" class="btn edit">Editar</a>
                    <form action="/users/<%= user.id_usuario %>/delete" method="POST" class="inline-form" aria-label="Desativar usuário">
                      <button type="submit" class="btn delete">Desativar</button>
                    </form>
                  <% } else { %>
                    <form action="/users/<%= user.id_usuario %>/reativar" method="POST" class="inline-form" aria-label="Reativar usuário">
                      <button type="submit" class="btn reativar">Reativar</button>
                    </form>
                  <% } %>
                </nav>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>
  <style>
    .visually-hidden {
      position: absolute !important;
      height: 1px; width: 1px;
      overflow: hidden;
      clip: rect(1px, 1px, 1px, 1px);
      white-space: nowrap;
    }
  </style>
</body>
</html>