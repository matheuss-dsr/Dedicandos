<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dedicandos - Login & Cadastro</title>
    <link rel="shortcut icon" href="../static/images/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/static/css/login-cadastro.css">
    <style>
        body {
            font-family: "Poppins", sans-serif;
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        .container {
            width: 900px;
            height: 550px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            display: flex;
            position: relative;
            overflow: hidden;
            transition: all 0.8s ease-in-out;
        }

        .image-container {
            flex: 1;
            background-size: cover;
            background-position: center;
            transition: all 0.8s ease-in-out;
        }

        .form-container {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: all 0.8s ease-in-out;
        }

        h2 {
            margin-bottom: 20px;
            text-align: center;
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #555;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .btn-primary {
            width: 100%;
            background-color: #007BFF;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .auth-links {
            text-align: center;
            margin-top: 15px;
        }

        .auth-links a {
            color: #007BFF;
            text-decoration: none;
        }

        .error {
            color: #ff3b3b;
            background: #ffeaea;
            padding: 8px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 10px;
        }

        .success {
            color: #2ecc71;
            background: #eaffea;
            padding: 8px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 10px;
        }

        /* ANIMAÇÃO ENTRE LOGIN E CADASTRO */
        .container.cadastro-mode .image-container {
            transform: translateX(100%);
            background-image: url("../static/images/cadastro-img.jpg");
        }

        .container.cadastro-mode .form-container {
            transform: translateX(-100%);
        }

        /* Imagem padrão (login) */
        .image-container {
            background-image: url("../static/images/login-img.jpg");
        }

        @media (max-width: 900px) {
            .container {
                flex-direction: column;
                height: auto;
            }
            .image-container {
                height: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="container" id="container">
        <!-- IMAGEM -->
        <div class="image-container" id="imageContainer"></div>

        <!-- FORMULÁRIO LOGIN -->
        <div class="form-container" id="loginForm">
            <h2>Login</h2>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error"><%= error %></div>
            <% } %>
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success"><%= success %></div>
            <% } %>

            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email">E-mail:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="senha">Senha:</label>
                    <input type="password" id="senha" name="senha" required>
                </div>
                <button type="submit" class="btn-primary">Entrar</button>
            </form>
            <div class="auth-links">
                <a href="/esqueci-senha">Esqueci minha senha</a><br>
                Não tem uma conta? <a href="#" id="showCadastro">Cadastre-se</a>
            </div>
        </div>

        <!-- FORMULÁRIO CADASTRO -->
        <div class="form-container" id="cadastroForm" style="display: none;">
            <h2>Criar Conta</h2>
            <% if (error) { %>
                <div class="error"><%= error %></div>
            <% } %>
            <% if (success) { %>
                <div class="success"><%= success %></div>
            <% } %>

            <form action="/cadastro" method="POST">
                <div class="form-group">
                    <label for="nome">Nome Completo:</label>
                    <input type="text" id="nome" name="nome" required>
                </div>
                <div class="form-group">
                    <label for="email">E-mail:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="senha">Senha:</label>
                    <input type="password" id="senha" name="senha" required minlength="6">
                </div>
                <div class="form-group">
                    <label for="data_nascimento">Data de Nascimento:</label>
                    <input type="date" id="data_nascimento" name="data_nascimento">
                </div>
                <button type="submit" class="btn-primary">Cadastrar</button>
            </form>
            <div class="auth-links">
                Já tem uma conta? <a href="#" id="showLogin">Faça Login</a>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('container');
        const loginForm = document.getElementById('loginForm');
        const cadastroForm = document.getElementById('cadastroForm');
        const showCadastro = document.getElementById('showCadastro');
        const showLogin = document.getElementById('showLogin');

        showCadastro.addEventListener('click', () => {
            container.classList.add('cadastro-mode');
            setTimeout(() => {
                loginForm.style.display = 'none';
                cadastroForm.style.display = 'flex';
            }, 400);
        });

        showLogin.addEventListener('click', () => {
            container.classList.remove('cadastro-mode');
            setTimeout(() => {
                cadastroForm.style.display = 'none';
                loginForm.style.display = 'flex';
            }, 400);
        });
    </script>
</body>
</html>
