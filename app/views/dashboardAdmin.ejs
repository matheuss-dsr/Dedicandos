<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/static/css/dashboardAdmin.css" />
</head>
<body>
  <!-- Sidebar -->
  <nav class="sidebar">
    <div class="logo">
      <a href="/" class="logo"><img src="/static/images/logo.png" alt="Logo Dedicandos"></a>
    </div>
    <a href="?page=users" data-page="users">Gerenciar Usuários</a>
    <a href="?page=prova" data-page="prova">Gerenciar Provas</a>
    <a href="/logout" class="logout-btn">LOGOUT</a>
  </nav>

  <!-- Área principal -->
  <div class="main">
    <header class="topbar" id="welcome">
      Bem-vindo, <%= user.nome %>!
    </header>
    <main class="dashboard-content" id="content">
      <% if (currentPage === 'users') { %>
        <%- include('./partials/list_users.ejs', { search: search, status: status, users: users }) %>
      <% } else if (currentPage === 'prova') { %>
        <%- include('provas/list_prova.ejs', { provas: provas || [], search: search || '' }) %>
      <% } else { %>
        <p>Selecione uma opção na barra lateral.</p>
      <% } %>
    </main>
  </div>
</body>
</html>
